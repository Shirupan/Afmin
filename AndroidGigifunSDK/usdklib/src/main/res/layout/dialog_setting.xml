<?xml version="1.0" encoding="utf-8"?>
<com.gigifun.gp.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/apk/res-auto">

    <com.gigifun.gp.ui.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        wheel:barColor="#F6A20E"
        android:visibility="gone"
        wheel:progressIndeterminate="true" />

    <com.gigifun.gp.percent.PercentLinearLayout
        android:id="@+id/layout_res"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="80%h"
        app:layout_widthPercent="65%w"
        android:layout_centerInParent="true"
        android:background="#ffffff"
        android:orientation="vertical">

        <com.gigifun.gp.percent.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="15%h"
            app:layout_widthPercent="100%w"
            android:background="@color/TitleColor">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_widthPercent="15%"
                app:layout_marginLeftPercent="3%"
                android:src="@drawable/iu_back"
                android:layout_centerVertical="true"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_settings"
                app:layout_textSizePercent="50%"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_centerInParent="true"
                android:textColor="#fac600"
                />
        </com.gigifun.gp.percent.PercentRelativeLayout>
        <com.gigifun.gp.percent.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_marginTopPercent="2.5%"
            app:layout_marginBottomPercent="2.5%"
            app:layout_widthPercent="80%"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_motifyPassword"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_textSizePercent="8%"
                android:textColor="#070707"
                android:gravity="center"
                android:text="@string/reset_pw"
                />
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7"
                ></LinearLayout>


            <TextView
                android:id="@+id/tv_bindEmail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_textSizePercent="8%"
                android:textColor="#070707"
                android:gravity="center"
                android:text="@string/bind_email"
                />
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7"
                ></LinearLayout>


            <TextView
                android:id="@+id/tv_bindGuest"
                android:text="@string/bind_visitor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_textSizePercent="8%"
                android:textColor="#070707"
                android:gravity="center"
                />
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7"
                ></LinearLayout>



            <TextView
                android:id="@+id/tv_bindFacebook"
                android:text="@string/bind_facebook"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_textSizePercent="8%"
                android:textColor="#070707"
                android:gravity="center"
                />
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E7E7"
                ></LinearLayout>
        </com.gigifun.gp.percent.PercentLinearLayout>
    </com.gigifun.gp.percent.PercentLinearLayout>
</com.gigifun.gp.percent.PercentRelativeLayout>