<?xml version="1.0" encoding="utf-8"?>
<com.gigifun.gp.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


        <ImageView
            android:id="@+id/img_share_gift"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:background="#ffffff"
            android:orientation="vertical"
            app:layout_heightPercent="50%h"
            app:layout_widthPercent="100%w"
            android:minHeight="@dimen/ugame_gift_size1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
             />

         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/gift_bottom_bg" >

            <Button
                android:id="@+id/img_gift_has_sended"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#333c42"
                android:background="#00000000"
                 >
            </Button>
            
            <TextView
            android:id="@+id/img_activite_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
             android:textColor="@color/select_false"
            android:textSize="14dp"
            android:text="@string/event_description" />
            
        </RelativeLayout>


</com.gigifun.gp.percent.PercentLinearLayout>