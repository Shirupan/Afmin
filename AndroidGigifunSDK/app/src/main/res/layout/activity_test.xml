<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:background="#aaaaaa"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="登陆界面" />

        <Button
            android:onClick="checkFail"
            android:id="@+id/btn_check"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="选择角色" />

        <Button android:id="@+id/btn_fb"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Facebook活动页面" />
        <Button
            android:id="@+id/btn_pay"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="google支付" />

        <Button
            android:onClick="molpay"
            android:id="@+id/btn_molpay"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="更多支付方式" />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_gogle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="跳转google play" />

        <Button
            android:onClick="wxpay"
            android:id="@+id/btn_wxpay"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="微信支付"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_webFlo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="悬浮窗"
            />
        <Button
            android:id="@+id/btngift"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="活动"/>

        <Button
            android:id="@+id/btnflow"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="悬浮窗"/>
    </LinearLayout>

</ScrollView>