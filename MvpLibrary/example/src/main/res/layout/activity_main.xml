<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/iv_main_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:src="@mipmap/jfla"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.stone.baselib.wigeht.STitleBar
        android:id="@+id/title_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_main_toast"
        style="@style/BtnMain"
        android:text="Show toast"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_main_snack"
        style="@style/BtnMain"
        android:text="Show snack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_toast"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_main_event"
        style="@style/BtnMain"
        android:text="Send event"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_snack"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_main_sp"
        style="@style/BtnMain"
        android:text="sp get last exit time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_event"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_main_http_get"
        style="@style/BtnMain"
        android:text="Http get"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_main_http_post"
        style="@style/BtnMain"
        android:text="Http post"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_http_get"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_main_viewpager"
        style="@style/BtnMain"
        android:text="viewpager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_http_post" />

    <Button
        android:id="@+id/btn_main_viewpager2"
        style="@style/BtnMain"
        android:text="viewpager2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_viewpager" />

</androidx.constraintlayout.widget.ConstraintLayout>